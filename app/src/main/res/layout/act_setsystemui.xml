<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt1"
            android:text="SYSTEM_UI_FLAG_VISIBLE\r\n恢复正常状态"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt2"
            android:text="SYSTEM_UI_FLAG_FULLSCREEN\r\n隐藏状态栏（顶部下滑恢复正常状态）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt3"
            android:text="INVISIBLE\r\n隐藏状态栏（顶部下滑恢复正常状态）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt4"
            android:text="SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN\r\n顶端布局会被状态栏遮住（只有点击恢复正常状态才可恢复）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt5"
            android:text="SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION\r\n顶端布局会被状态栏遮住（只有点击恢复正常状态才可恢复）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt6"
            android:text="SYSTEM_UI_LAYOUT_FLAGS\r\n顶端布局会被状态栏遮住（只有点击恢复正常状态才可恢复）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt7"
            android:text="SYSTEM_UI_FLAG_HIDE_NAVIGATION\r\n隐藏导航栏（任何点击恢复正常状态）"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt8"
            android:text="SYSTEM_UI_FLAG_LOW_PROFILE\r\n状态栏显示处于低能显示状态(low profile模式)，状态栏导航栏上一些图标显示会被隐藏(底部上顶部下滑呼出恢复正常状态)"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt9"
            android:text="SYSTEM_UI_FLAG_IMMERSIVE\r\n隐藏导航栏(底部上顶部下滑呼出恢复正常状态)"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt10"
            android:text="SYSTEM_UI_FLAG_IMMERSIVE_STICKY\r\n隐藏导航栏(底部上顶部下滑呼出导航栏，过一段时间自动消失)"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="bt11"
            android:text="全屏模式(底部上顶部下滑呼出导航栏，过一段时间自动消失)"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\r\n\r\n\r\n\r\n\r\n\r\n"/>

    </LinearLayout>

</ScrollView>